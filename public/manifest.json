{
  "manifest_version": 3,
  "name": "AI Assistant Sidebar",
  "version": "1.0.0",
  "description": "Privacy-first local AI assistant with Chrome built-in AI and offline Transformers.js fallback",
  "permissions": [
    "storage",
    "sidePanel",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; connect-src 'self' https://cdn.jsdelivr.net https://cas-bridge.xethub.hf.co/ https://raw.githubusercontent.com/ https://huggingface.co https://huggingface-cdn-a.hf.space https://*.huggingface.co; object-src 'self';"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Open AI Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/watch*", "https://youtube.com/watch*", "https://www.youtube.com/embed/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://www.youtube-nocookie.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["permission.html", "permission-request.js"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/*.wasm", "assets/*.mjs", "assets/*.js", "transformers/*.wasm", "transformers/*.mjs"],
      "matches": ["<all_urls>"]
    }
  ],
